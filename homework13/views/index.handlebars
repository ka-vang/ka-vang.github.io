<div class="container">

    <div class="jumbotron">
        <h1>Eat-Da-Burger</h1>
        <br>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">What do you wanna eat? </label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addburger">Submit</button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside">
                    <strong>Burgers I Want to Eat</strong>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning button" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Send to Plate</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside">
                    <strong>Burgers to be Devoured</strong>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger button" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Devour It</button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>

</div>